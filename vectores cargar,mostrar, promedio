#include <iostream>
#define MAX 100

using namespace std;
float promedio(int vec[],int n);
void cargar(int vec[], int n);
void mostrar(int vec[], int n);
int main() {
	int n, vec[MAX];
	do {
		cout << "Ingresar el tamaÃ±o del vector:";
		cin >> n;
	} while ((n <= 0) || (n > MAX));
	cargar(vec, n); 
	mostrar(vec, n);
	cout<<"el promedio es "<<promedio(vec, n);
	return 0;
}

void cargar(int vec[], int n)
{
	for (int i = 0; i < n; i++)
	{
		cout << "Vector[" << i << "]= ";
		cin >> vec[i];
	}
}

void mostrar(int vec[], int n)
{
	for (int i = 0; i < n; i++)
		cout << "Vector[" << i << "]= " << vec[i] << endl;
}
float promedio(int vec[], int n)
{
	float suma =0;
	for (int i = 0; i < n; i++)
		suma += vec[i];
	return suma / n;
}
