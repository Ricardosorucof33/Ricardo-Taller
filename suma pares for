#include <iostream>
using namespace std;

int main() {
    int suma = 0;

    cout << "Los primeros 10 números pares son: ";
    
    for (int i = 1; i <= 10; i++) {
        int par = i * 2;  
        cout << par << " "; 
        suma += par;  
    }

    cout << endl;  
    cout << "La suma de los primeros 10 números pares es: " << suma << endl;

    return 0;
}
