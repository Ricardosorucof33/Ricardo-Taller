#include <iostream>
using namespace std;

int main() {
    int opcion;
    float sueldoBasico, bonoTransporte, bonificacionAntiguedad, sueldoFinal;

    cout << "MENU" << endl;
    cout << "1. Calcular sueldo final" << endl;
    cout << "2. Salir" << endl;
    cout << "Ingrese una opcion: ";
    cin >> opcion;

    switch(opcion) {
        case 1:
            cout << "Ingrese el sueldo básico: ";
            cin >> sueldoBasico;
            cout << "Ingrese el bono de transporte: ";
            cin >> bonoTransporte;
            cout << "Ingrese la bonificación por antigüedad: ";
            cin >> bonificacionAntiguedad;
            sueldoFinal = sueldoBasico + bonoTransporte + bonificacionAntiguedad;
            cout << "El sueldo final del trabajador es: " << sueldoFinal << endl;
            break;
        case 2:
            cout << "Saliendo..." << endl;
            break;
        default:
            cout << "Opcion invalida" << endl;
            break;
    }

    return 0;
}
